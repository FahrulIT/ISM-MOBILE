                            <span class="hide-menu">Home</span>
                        </li>

                        <li class="sidebar-item">
                            <a class="sidebar-link" href="@Url.Action("Welcome", "Home")" aria-expanded="false">
                                <span>
                                    <i class="ti ti-dashboard"></i>
                                </span>
