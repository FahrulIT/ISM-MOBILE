                            <li class="nav-small-cap">
                                <i class="ti ti-dots nav-small-cap-icon fs-4"></i>
                                <span class="hide-menu">Master</span>
                            </li>


                            if (akses.Where(x => x.menu.ToString().Trim() == "MASTER" && x.submenu.ToString().Trim() == "Machine Trouble").Count() > 0)
