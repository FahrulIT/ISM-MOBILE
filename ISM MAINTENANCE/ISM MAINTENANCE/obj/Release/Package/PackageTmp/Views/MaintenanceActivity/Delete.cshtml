@model ISM_MAINTENANCE.Models.ViewModel.MaintenanceActivity

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    @using (Html.BeginForm("Delete", "MaintenanceActivity", FormMethod.Post, new { @class = "", role = "form" }))
    {
        <div class="card-header text-bg-primary">
            <h4 class="mb-0 text-white fs-6">Delete</h4>
        </div>

        <div class="card-body mb-1">
            <h3 class="mb-4">Are you sure you want to delete this?</h3>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3 row">
                @Html.LabelFor(model => model.dept_name, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.dept_name, new { disabled = "disabled", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.dept_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                @Html.LabelFor(model => model.mc_name, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.mc_name, new { disabled = "disabled", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.mc_name, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="mb-3 row">
                @Html.LabelFor(model => model.maintenance_slip, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.maintenance_slip, new { disabled = "disabled", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.maintenance_slip, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                @Html.LabelFor(model => model.issue_date, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.issue_date, "{0:yyyy-MM-dd}", new { disabled = "disabled", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.issue_date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                @Html.LabelFor(model => model.machine_no, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.machine_no, new { disabled = "disabled", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.machine_no, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                @Html.LabelFor(model => model.mtc_name, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.mtc_name, new { disabled = "disabled", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.mtc_name, "", new { @class = "text-danger" })
                </div>
            </div>
            
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Yes</button>
            @Html.ActionLink("No", "Index", "MaintenanceActivity", null, new { @class = "btn bg-danger-subtle text-danger ms-6" })
        </div>
    }
</div>
