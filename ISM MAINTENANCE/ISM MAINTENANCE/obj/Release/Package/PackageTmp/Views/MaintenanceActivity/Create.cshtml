@model ISM_MAINTENANCE.Models.ViewModel.MaintenanceActivity

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    @using (Html.BeginForm("Create", "MaintenanceActivity", FormMethod.Post, new { @class = "", role = "form" }))
    {
        <div class="card-header text-bg-primary">
            <h4 class="mb-0 text-white fs-6">Add New</h4>
        </div>

        <div class="card-body">
            @*@Html.AntiForgeryToken()*@

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3 row">
                @Html.LabelFor(model => model.dept_name, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @*@Html.DropDownList("dept_id", null, "Select Department", htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.dept_id, "", new { @class = "text-danger" })*@
                    <input type="text" name="birthday" value="10/24/1984" />
                </div>
            </div>

            <div class="mb-3 row">
                @Html.LabelFor(model => model.mc_name, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.DropDownList("mc_id", null, "Select Machine Type", htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.mc_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                @Html.LabelFor(model => model.maintenance_slip, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-2 col">
                    @Html.EditorFor(model => model.mtc_slip_no1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.mtc_slip_no1, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-1 col text-center">
                    -
                </div>

                <div class="col-md-1 col">
                    @Html.EditorFor(model => model.mtc_slip_no2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.mtc_slip_no2, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="mb-3 row">
                @Html.LabelFor(model => model.issue_date, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.issue_date, "{0:dd-MM-yyyy}", new { @class = "form-control", @onchange = "ChangeValue()", type = "date" })
                    @Html.ValidationMessageFor(model => model.issue_date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                @Html.LabelFor(model => model.machine_no, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.DropDownList("machine_no", null, "Select Machine Number", htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.machine_no, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3 row">
                @Html.LabelFor(model => model.mtc_name, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.DropDownList("mtc_id", null, "Select Maintenance Type", htmlAttributes: new { @class = "form-select", @onchange = "singleSelectChangeValue()" })
                    @Html.ValidationMessageFor(model => model.mtc_id, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            @Html.ActionLink("Back", "Index", "MaintenanceActivity", null, new { @class = "btn bg-danger-subtle text-danger ms-6" })
        </div>
    }

</div>


