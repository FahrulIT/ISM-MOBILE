@model IEnumerable<ISM_MAINTENANCE.Models.ViewModel.MaintenanceType>

@{
    ViewBag.Title = "Index";
    ViewBag.Menu = "Maintenance Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int NomorBaris = 0;
}

<div class="card">
    <div class="card-header bg-primary">
        <div class="text-white fs-6 fw-bold">@ViewBag.Menu - @ViewBag.Title</div>
    </div>

    <div class="card-body">
        <div class="col-md-4 col-xl-3">
            <a href="@Url.Action("Create", "MaintenanceType" )" class="btn btn-rounded btn-outline-primary">
                Add New
            </a>
        </div>

        <div class="table-responsive">
            <table id="" class="display table search-table table-sm  align-middle text-nowrap">
                <thead class="header-item">
                    <tr>
                        <th style="text-align:center">
                            No
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.mtc_id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.mtc_name)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>

                    <!-- start row -->
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center">
                                @(NomorBaris += 1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.mtc_id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.mtc_name)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.mtc_id }, new { @class = "badge rounded-pill bg-primary-subtle text-primary" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.mtc_id }, new { @class = "badge rounded-pill bg-danger-subtle text-danger" })
                            </td>
                        </tr>
                    }

                    <!-- end row -->
                </tbody>
            </table>

        </div>

    </div>
</div>

