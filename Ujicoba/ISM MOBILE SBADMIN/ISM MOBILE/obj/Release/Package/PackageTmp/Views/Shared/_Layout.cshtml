@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>ISTEM MOBILE SYSTEM</title>
    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin-2.css" rel="stylesheet">
</head>
<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index", "Home")">
                <div class="sidebar-brand-icon">
                    @*<i class="fas fa-plane"></i>*@
                    <img src="~/Image/toray_logo.svg">
                </div>
                <div class="sidebar-brand-text mx-3">IMS Beta<sup>V.0</sup></div>
            </a>
            
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            @*<li class="nav-item">*@
            <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "nav-item active" : "nav-item")">
                <a class="nav-link" href="@Url.Action("Index", "Home")">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Home</span>
                </a>
            </li>

            <hr class="sidebar-divider">

            <div class="sidebar-heading">
                Charts
            </div>

            <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "YarnStock" ? "nav-item active" : "nav-item")">
                <a class="nav-link" href="@Url.Action("Index", "YarnStock")">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Yarn stock</span>
                </a>
            </li>

            <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "GreyStock" ? "nav-item active" : "nav-item")">
                <a class="nav-link" href="@Url.Action("Index", "GreyStock")">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Grey stock</span>
                </a>
            </li>

            <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Finishgoods" ? "nav-item active" : "nav-item")">
                <a class="nav-link" href="@Url.Action("Index", "Finishgoods")">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Finish good stock</span>
                </a>
            </li>
            <!-- Divider -->
            @*<hr class="sidebar-divider d-none d-md-block">
             <div class="sidebar-heading">User</div>
            
            <li class=" nav-item" style="@(User.Identity.GetUserName().ToString() == "fahrulfd@gmail.com" ?  "display:" : "display:none")">
                <a class=" = nav-link" href="@Url.Action("Register", "Account", new { id = "registerLink"  })">
                    <i class="fas fa-fw fa-user"></i>
                    <span>Register</span>
                </a>
            </li>*@

      
            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
</ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                 <!-- Topbar -->
                    <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">                      
                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-1">
                        <i class="fa fa-bars"></i>
                       @*<img src="~/Image/icon_istem_small.svg">*@                        
                    </button>              
                       
                    <div class="d-none d-sm-inline-block mr-auto my-2 my-md-0 mw-100 navbar-search">
                        <img src="~/Image/icon_logo_istem.svg">  ISTEM Mobile System
                    </div>
                        <div class="CustomTextHeaderByFahrul">
                            ISTEM MOBILE SYSTEM
                        </div>

                    <ul class="navbar-nav ml-auto">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </nav>
                    @RenderBody()
            </div>  
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Developed by &copy; Toray Industries Indonesia (2023)</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
         </div>   
            
     </div>
        <!-- End of Content Wrapper -->
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Content/js/sb-admin-2.js"></script>
  
    @RenderSection("scripts", required: false)
</body>
</html>

