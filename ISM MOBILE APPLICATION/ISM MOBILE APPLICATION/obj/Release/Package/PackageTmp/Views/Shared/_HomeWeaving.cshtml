                            <div class="fw-bold py-1 w-85" style="text-align:left;padding-left:15px">
                                Warehousing
                            </div>
                        </div>
                        <div id="chart_WV_WH" style="min-height:200PX;display:flex;justify-content:center;"></div>
                        <div class="" style="display:flex;justify-content:center;">
                            @*<a href="#" class="btn btn btn-outline-dark">Detail</a>*@
                            <button type="button" class="btn btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#ModalForWVWH">Detail</button>
                            <!-- Modal -->
                            <div class="modal fade" id="ModalForWVWH" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-fullscreen">
                                    <div class="modal-content">
                                        <div class="modal-header modal-colored-header bg-primary">
                                            <h5 class="modal-title text-white" id="exampleModalLabel">Weaving - Grey Warehousing</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body" style="font-family:Arial">
                                            <div class="table-responsive">
                                                <table id="WV-WH" class="display" style="width:100%">
                                                    <thead>
                                                        <!-- start row -->
                                                        <tr>
                                                            <th scope="col" colspan="1" rowspan="2">Item</th>
                                                            <th scope="col" colspan="3" rowspan="1" class="text-center" data-dt-order="disable">Until Today</th>
                                                            <th scope="col" colspan="2" rowspan="1" class="text-center" data-dt-order="disable">This Month Total</th>
                                                        </tr>

                                                        <tr>
                                                            <th scope="col" class="text-end">Percentage</th>
                                                            <th scope="col" class="text-end">Plan</th>
                                                            <th scope="col" class="text-end">Actual</th>
                                                            <th scope="col" class="text-end">Tot Plan</th>
                                                            <th scope="col" class="text-end">Curr Inv</th>
                                                        </tr>
                                                        <!-- end row -->
                                                    </thead>
                                                    <tbody>
                                                        <!-- start row -->
                                                        @*@if (ViewBag.Count_Detail_WH_WV == 0)*@
                                                        @if (ViewBag.Detail_WH_WV == null)
                                                        {
                                                            <tr>
                                                                <th scope="row">-</th>
                                                                <td>-</td>
                                                                <td>-</td>
                                                                <td>-</td>
                                                                <td>-</td>
                                                                <td>-</td>
                                                            </tr>
                                                        }
                                                        else
                                                        {
                                                            foreach (var data in ViewBag.Detail_WH_WV)
                                                            {
                                                                <tr>
                                                                    <td>@data.Item</td>
                                                                    <td class="text-end">@data.Persentase.ToString("#,##0.00") %</td>
                                                                    <td class="text-end">@data.Plan.ToString("#,##0.00")</td>
                                                                    <td class="text-end">@data.Actual.ToString("#,##0.00")</td>
                                                                    <td class="text-end">@data.PlanofMonth.ToString("#,##0.00")</td>
                                                                    <td class="text-end">@data.CurrentInv.ToString("#,##0.00")</td>
                                                                </tr>
                                                            }
                                                        }

                                                        <!-- end row -->
                                                    </tbody>
                                                    <tfoot>
                                                        @*@if (ViewBag.Count_SubtotalPlan_WH_WV == 0)*@
                                                        @if (ViewBag.SubtotalPlan_WH_WV == null)
                                                        {
                                                            <tr>
                                                                <th scope="row">Total (Planned)</th>
                                                                <td>-</td>
                                                                <td>-</td>
                                                                <td>-</td>
                                                                <td>-</td>
                                                                <td>-</td>
                                                            </tr>
                                                        }
                                                        else
                                                        {
                                                            foreach (var data in ViewBag.SubtotalPlan_WH_WV)
                                                            {
                                                                <tr>
                                                                    <th scope="row">@data.Item</th>
                                                                    <td class="text-end fw-bolder">@data.Persentase.ToString("#,##0.00") %</td>
                                                                    <td class="text-end fw-bolder">@data.Plan.ToString("#,##0.00")</td>
                                                                    <td class="text-end fw-bolder">@data.Actual.ToString("#,##0.00")</td>
                                                                    <td class="text-end fw-bolder">@data.PlanofMonth.ToString("#,##0.00")</td>
                                                                    <td class="text-end fw-bolder">@data.CurrentInv.ToString("#,##0.00")</td>
                                                                    <!--<td>0</td>
                                                                    <td>0</td>-->
                                                                </tr>
                                                            }
                                                        }

                                                        @*@if (ViewBag.Count_SubtotalAll_WH_WV == 0)*@
