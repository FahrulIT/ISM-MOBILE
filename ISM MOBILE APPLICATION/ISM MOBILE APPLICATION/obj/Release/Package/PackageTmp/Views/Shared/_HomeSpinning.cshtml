                                                        <tr>
                                                            <th scope="col" class="text-end">Percentage</th>
                                                            <th scope="col" class="text-end">Plan</th>
                                                            <th scope="col" class="text-end">Actual</th>
                                                            <th scope="col" class="text-end">Tot Plan</th>
                                                            <th scope="col" class="text-end">Curr Inv</th>
                                                        </tr>

                                                        <!-- end row -->
                                                    </thead>
                                                    <tbody>
                                                        <!-- start row -->
                                                        @if (ViewBag.Detail_WH_SP == null)
                                                        {
                                                            <tr>
                                                                <th scope="row">-</th>
                                                                <td>-</td>
                                                                <td>-</td>
                                                                <td>-</td>
                                                                <td>-</td>
                                                                <td>-</td>
                                                            </tr>
                                                        }
                                                        else
                                                        {
                                                            foreach (var WH_SP in ViewBag.Detail_WH_SP)
                                                            {
                                                                <tr>
                                                                    <td>@WH_SP.Item</td>
                                                                    <td class="text-end">@WH_SP.Persentase.ToString("#,##0.00") %</td>
                                                                    <td class="text-end">@WH_SP.Plan.ToString("#,##0.00")</td>
                                                                    <td class="text-end">@WH_SP.Actual.ToString("#,##0.00")</td>
                                                                    <td class="text-end">@WH_SP.PlanofMonth.ToString("#,##0.00")</td>
                                                                    <td class="text-end">@WH_SP.CurrentInv.ToString("#,##0.00")</td>
                                                                    <!--<td>0</td>
                                                                    <td>0</td>-->
                                                                </tr>
                                                            }
                                                        }




                                                        <!-- end row -->
                                                    </tbody>
                                                    <tfoot>
                                                        @*@if (ViewBag.Count_SubtotalPlan_WH_SP == 0)*@
                                                        @if (ViewBag.SubtotalPlan_WH_SP == null)
                                                        {
                                                            <tr>
                                                                <th scope="row">Total (Planned)</th>
                                                                <td>-</td>
                                                                <td>-</td>
                                                                <td>-</td>
                                                                <td>-</td>
                                                                <td>-</td>
                                                            </tr>
                                                        }
                                                        else
                                                        {
                                                            foreach (var data in ViewBag.SubtotalPlan_WH_SP)
                                                            {
                                                                <tr>
                                                                  
                                                                    <th scope="row">@data.Item</th>
                                                                    <td class="text-end fw-bolder">@data.Persentase.ToString("#,##0.00") %</td>
                                                                    <td class="text-end fw-bolder">@data.Plan.ToString("#,##0.00")</td>
                                                                    <td class="text-end fw-bolder">@data.Actual.ToString("#,##0.00")</td>
                                                                    <td class="text-end fw-bolder">@data.PlanofMonth.ToString("#,##0.00")</td>
                                                                    <td class="text-end fw-bolder">@data.CurrentInv.ToString("#,##0.00")</td>
