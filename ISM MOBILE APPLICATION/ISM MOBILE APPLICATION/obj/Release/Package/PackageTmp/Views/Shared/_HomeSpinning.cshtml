                                                                    <td class="text-end fw-bolder">@data.CurrentInv.ToString("#,##0.00")</td>
                                                                    <!--<td>0</td>
                                                                    <td>0</td>-->
                                                                </tr>
                                                            }
                                                        }
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            @*<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

